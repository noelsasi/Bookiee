extends layout

block content
  .container-fluid.p-5
    h1.text-center Books List
    .row.col-12.mt-5.offset-1     
      each val in books
        .card.col-3.mr-3.mb-3
          .card-header
            h5 Title - #{val.title} 
          .card-body
            h6 Preface
            p.card-text #{val.text}
          .card-footer
            p Buy here - 
              span.text-primary #{val.url}